<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonPortrait">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">437dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="ButtonLandscape">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">245dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="ImagePortrait">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageLandscape">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>

